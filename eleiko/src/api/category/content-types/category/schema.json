{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "singularName": "category",
    "pluralName": "categories",
    "displayName": "Category",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "code": {
      "type": "string",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "multiCulture": true
        }
      }
    },
    "desc": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "multiCulture": true
        }
      }
    },
    "metaTitle": {
      "pluginOptions": {
        "i18n": {
          "multiCulture": true
        }
      },
      "description": "Used for the meta-data title, If empty title will be used instead",
      "type": "text"
    },
    "metaDescription": {
      "pluginOptions": {
        "i18n": {
          "multiCulture": true
        }
      },
      "type": "text"
    },
    "keywords": {
      "description": "Comma (,) separated list",
      "pluginOptions": {
        "i18n": {
          "multiCulture": true
        }
      },
      "type": "text"
    },
    "metaImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "string",
      "required": true
    },
    "text": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "multiCulture": true
        }
      }
    },
    "Links": {
      "type": "component",
      "repeatable": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "common.link"
    }
  }
}
